# Application Configuration
APP_NAME="Image Segmentation Service"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Security
# SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000"

# Database Configuration
POSTGRES_USER=admin_segment_password
POSTGRES_PASSWORD=some_password
POSTGRES_DB=segmentation_db
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}:5432/${POSTGRES_DB}"


# Redis Configuration
REDIS_URL="redis://redis:6379"
REDIS_CACHE_TTL=3600

# File Upload Configuration
UPLOAD_PATH="/app/uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_IMAGE_DIMENSION=2048
DEFAULT_RESIZE_DIMENSION=512

# ML Configuration
MAX_CONCURRENT_SEGMENTATIONS=4
SEGMENTATION_TIMEOUT=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development only
RELOAD=true